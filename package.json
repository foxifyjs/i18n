{
  "name": "@foxify/i18n",
  "version": "1.1.0",
  "description": "A lightweight translation module for Node.js and browser",
  "author": {
    "name": "Ardalan Amini",
    "email": "ardalanamini22@gmail.com",
    "url": "https://ardalanamini.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/foxifyjs/i18n#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/foxifyjs/i18n.git"
  },
  "bugs": {
    "url": "https://github.com/foxifyjs/i18n/issues"
  },
  "keywords": [
    "translate",
    "translation",
    "international",
    "internationalization",
    "i18n"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build && npm test",
    "build": "tsc",
    "watch": "npm run build -- --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json --exclude '**/*.d.ts'",
    "test": "jest --runInBand",
    "coverage": "npm test -- --coverage",
    "codecov": "npm run build && npm run coverage -- --runInBand && codecov"
  },
  "peerDependencies": {
    "prototyped.js": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.3",
    "codecov": "^3.5.0",
    "jest": "^24.8.0",
    "prototyped.js": "^1.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*\\.ts"
    ]
  }
}
